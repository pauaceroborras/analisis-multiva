dades <- read.csv2("airline_passenger_satisfaction.csv", sep = ",")
dades <- dades[,-1]

View(dades) ### Veure la base de dades
class(dades) ### Classe
dim(dades) ### Dimensió
nrow(dades) ### Nombre de files
ncol(dades) ### Nombre de columnes
colnames(dades) ### Nom de les columnes
rownames(dades) ### Nom de les files
str(dades) ### Conèixer l’estructura de la base de dades

#Fem un resum
summary(dades)

# Transformar 3 variables categòriques a numèriques

food <- data[,12]
dec <- runif(length(food), min = 0, max = 0.99)
food <- food + dec

data$food_and_drink <- food

online <- data[,13]
dec <- runif(length(food), min = 0, max = 0.99)
online <- online + dec

data$online_boarding <- online

seat <- data[,14]
dec <- runif(length(food), min = 0, max = 0.99)
seat <- seat + dec

data$seat_comfort <- seat
